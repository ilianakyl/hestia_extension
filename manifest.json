{
    "name": "Hestia extension",
    "version": "1.0",
    "description": "Keep my appications tidy",
    "background": {
        "scripts": [
          "background_script.js"
            ]
      },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "identity",
        "cookies",
        "background",
        "contextMenus",
        "downloads",
        "alarms",
        "idle"
      ],
    "browser_action": {
        "default_title": "Hestia service"   
    }, 
    "icons": {
        "16": "images/hestia16.png",
        "32": "images/hestia32.png",
        "48": "images/hestia48.png",
        "128": "images/hestia128.png"
    },
    "externally_connectable": {
        "matches": [
          "*://*.lvh.me/*",
          "*://localhost/*"
        ]
      },
      "web_accessible_resources": [
        "fonts/*.woff",
        "fonts/*.ttf",
        "fonts/*.svg",
        "fonts/*.eot",
        "images/*.png",
        "images/*.svg",
        "images/*.gif",
        "styles/*.css",
        "frames/*.html", 
        "scripts/*.js"
      ],
      "content_scripts": [ 
        { 
            "matches": ["http://*.workablestg1.com/*", "https://*.workablestg1.com/*", "*://*.lvh.me/*"],
          "css": ["styles/main.css"], 
          "js": ["scripts/popup.js"] 
        } 
      ], 
    "manifest_version": 2
  }
